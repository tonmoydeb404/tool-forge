{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "name": "Tool Forge",
  "author": "Tonmoy Deb",
  "homepage_url": "https://github.com/tonmoydeb404/tool-forge",
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup.html",
    "default_title": "Tool Forge - Utility Tools",
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    }
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup.html",
    "default_title": "Tool Forge - Utility Tools",
    "default_icon": {
      "16": "icon/icon16.png",
      "32": "icon/icon32.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    }
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": [
      "src/background.ts"
    ],
    "{{firefox}}.persistent": false
  },
  "permissions": [
    "storage"
  ],
  "{{chrome}}.host_permissions": [],
  "{{firefox}}.applications": {
    "gecko": {
      "id": "toolforge@tonmoydeb.com"
    }
  }
}